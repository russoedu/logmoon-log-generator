{
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "env": {
    "node" : true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "no-var": 2,
    "prefer-const": 2,
    "object-curly-spacing": [2, "always"],
    "no-unused-vars": ["error", { "varsIgnorePattern": "^env$" }]
  }
}
